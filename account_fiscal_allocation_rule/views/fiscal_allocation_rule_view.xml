                    <field name="to_invoice_country"/>
                    <field name="to_invoice_state"/>
                    <field name="to_shipping_country"/>
                    <field name="to_shipping_state"/>
                    <field name="sequence"/>
                    <field name="vat_rule"/>
                </tree>
            </field>
        </record>

    <record id="view_account_fiscal_allocation_rule_search" model="ir.ui.view">
